# =============================================================================
# ducksnet Bot Configuration
# =============================================================================
# Скопируйте этот файл в .env и заполните вашими значениями
# cp env.example .env

# =============================================================================
# Bot Configuration
# =============================================================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_DOMAIN=your-domain.com
BOT_WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///app/db/database.db

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# =============================================================================
# Let's Encrypt SSL Configuration
# =============================================================================
LETSENCRYPT_EMAIL=your-email@example.com

# =============================================================================
# Traefik Dashboard Configuration
# =============================================================================
# Генерируйте хеш: echo -n 'admin:password' | base64
TRAEFIK_AUTH=YWRtaW46cGFzc3dvcmQ=

# =============================================================================
# VPN Panel Configuration (3X-UI)
# =============================================================================
XUI_PANEL_URL=https://your-xui-panel.com
XUI_USERNAME=your_username
XUI_PASSWORD=your_password

# =============================================================================
# Payment Gateway Configuration
# =============================================================================

# YooKassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# CryptoMus
CRYPTOMUS_MERCHANT_ID=your_merchant_id
CRYPTOMUS_PAYMENT_KEY=your_payment_key

# YooMoney
YOOMONEY_TOKEN=your_token

# Telegram Stars
TELEGRAM_STARS_TOKEN=your_token

# Heleket
HELEKET_API_KEY=your_api_key

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/bot.log

# =============================================================================
# Security Configuration
# =============================================================================
ADMIN_USER_IDS=123456789,987654321
DEV_USER_IDS=123456789

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REFERRAL_SYSTEM=true
ENABLE_NOTIFICATIONS=true
ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
CACHE_TTL=3600
